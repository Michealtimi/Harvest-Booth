generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id        String   @id @default(uuid())
  eventId   String
  inputUrl  String?
  outputUrl String?
  status    String   @default("pending") // pending | processing | done | failed
  prompt    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
